<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Images</title>
</head>
<body>
    <div class="container">
        <form action="/adminImages" method="post" enctype="multipart/form-data">
            <h1>Add new images</h1>
            <input type="file" name="images" multiple="true" id="">
            <button>Submit</button>
        </form>
    </div>
    
    <h1>Images</h1>
    <div class="container">
        <% for(let img in images){ %>
            <div class="image">
                <a href="/deleteAdminImage/?name=<%= images[img] %>">
                    <strong>X</strong>
                </a>
                <img src="/adminImages/<%= images[img] %>" alt="iouyoiu">
            </div>
        <% } %>
    </div>
</body>
</html>

<style>
    body{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    img{
        width: 100%;
        height: 100%;
    }
    .container{
        width: 90vw;
        height: fit-content;
        display: grid;
        /* margin: 0,auto; */
        align-items: center;
        justify-content: center;
        grid-template-columns:repeat(3,1fr);
        gap: 10px;
    }
    .image{
        box-sizing: border-box;
        width: 100%;
        height: 250px;
        object-fit: cover;
        margin: 5px;
        position: relative;
    }
    strong{
        position: absolute;
        background: purple;
        padding: 2px;
        color: aliceblue;
    }

    @media only screen and (max-width: 1024px){
        .container{
            grid-template-columns:repeat(2,1fr);
        }
    }

    @media only screen and (max-width: 780px){
        .container{
            grid-template-columns:repeat(1,1fr);
        }
    }
</style>